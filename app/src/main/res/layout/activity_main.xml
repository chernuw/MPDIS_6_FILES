<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Имя файла" />

            <EditText
                android:id="@+id/lName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Фамилия" />

            <EditText
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Группа" />

            <EditText
                android:id="@+id/faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Факультет" />

            <Button
                android:id="@+id/btnwrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Запись файла" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fnameread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Имя файла" />

            <EditText
                android:id="@+id/lNameRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Фамилия" />

            <EditText
                android:id="@+id/groupRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Группа" />

            <EditText
                android:id="@+id/facultyRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Факультет" />

            <Button
                android:id="@+id/btnread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Чтение из файла" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/filecon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"/>

</LinearLayout>
